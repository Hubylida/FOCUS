<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="stylesheets/bootstrap.min.css")
    link(rel="stylesheet", href="stylesheets/normalize.css")
    link(rel="stylesheet", href="stylesheets/research.css")
    link(rel="stylesheet", href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css")
    title FOCUS
  body 
    section.header.container-fluid
        div.row
          div.col-md-5
            a.head-name(href="/") FOCUS LAB
            div#nav-menu
          div.col-md-7
            div.nav-bar
              a.nav-item(href="members") Members 
              a.nav-item(href="researchs") Research
              a.nav-item(href="events") Events
              a.nav-item(href="join") Join us
              a.nav-item(href="about") About
      section#main-content 
        div.container
          div.research-wrap 
            img(src="#{head_img}", alt="" id="head_img")
            h1 #{name}
            p #{p_1}
            div.img-wrap
              img(src="#{img_1}", alt="")
            p #{p_2}
            div.img-wrap
              img(src="#{img_2}", alt="")
            p #{p_3}
            div.img-wrap
              img(src="#{img_3}", alt="")
            p #{p_4}
            div.img-wrap
              img(src="#{img_4}", alt="")
            p #{p_5}
            div.img-wrap
              img(src="#{img_5}", alt="")
            p #{p_6}
            div.img-wrap
              img(src="#{img_6}", alt="")
            p #{developer}
      section.footer 
        div.row
          a.footer-title.col-md-2(href="/") FOCUS LAB
          div.col-md-10
            p.footer-content
              a(href="members") members 
              a(href="researchs") research 
              a(href="about") about 
            p.footer-content @Nanjing University of Posts and Telecommunications. FOCUS
  script(type='text/javascript', src='javascripts/jquery.slim.min.js')
  script(type='text/javascript', src='javascripts/popper.min.js')
  script(type='text/javascript', src='javascripts/bootstrap.min.js')
  script(type='text/javascript', src='javascripts/jquery.min.js')
  script(type='text/javascript', src='javascripts/main.js')